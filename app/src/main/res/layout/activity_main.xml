<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/main_fan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="返回"
        android:layout_margin="5dp"
        />
    <android.inputmethodservice.ExtractEditText
        android:id="@+id/main_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/main_fan"
        app:layout_constraintRight_toLeftOf="@id/main_change"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:hint="请输入关键词"
        />
    <Button
        android:id="@+id/main_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="切换"
        android:layout_margin="5dp"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/main_recy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_edit"
        android:layout_margin="5dp"
        ></android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>